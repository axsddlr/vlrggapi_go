{
    "swagger": "2.0",
    "info": {
        "description": "REST API for scraping Valorant esports data from vlr.gg",
        "title": "vlrggapi",
        "contact": {
            "name": "vlrggapi Maintainers",
            "url": "https://github.com/yourusername/vlrggapi"
        },
        "license": {
            "name": "MIT"
        },
        "version": "1.0"
    },
    "host": "localhost:3001",
    "basePath": "/",
    "paths": {
        "/vlr/health": {
            "get": {
                "description": "Returns health status of the API and upstream sources",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "health"
                ],
                "summary": "Health check",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/vlr/match": {
            "get": {
                "description": "Returns recent match results with detailed info",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "matches"
                ],
                "summary": "Get recent Valorant match results",
                "parameters": [
                    {
                        "type": "integer",
                        "default": 1,
                        "description": "Number of pages to fetch",
                        "name": "num_pages",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "description": "Start page",
                        "name": "from_page",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "description": "End page",
                        "name": "to_page",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "default": 3,
                        "description": "Retry attempts per page",
                        "name": "max_retries",
                        "in": "query"
                    },
                    {
                        "type": "number",
                        "default": 1,
                        "description": "Delay between requests (seconds)",
                        "name": "request_delay",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "default": 30,
                        "description": "HTTP timeout (seconds)",
                        "name": "timeout",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/vlr/news": {
            "get": {
                "description": "Returns a list of recent Valorant news articles",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "news"
                ],
                "summary": "Get latest Valorant news",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/vlr/rankings": {
            "get": {
                "description": "Returns team rankings for a given region",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "rankings"
                ],
                "summary": "Get Valorant team rankings",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Region key (e.g. na, eu, ap, la, oce, kr, mn, gc, br, cn, jp, col)",
                        "name": "region",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/vlr/stats": {
            "get": {
                "description": "Returns player statistics, filterable by region and timespan",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "stats"
                ],
                "summary": "Get Valorant player statistics",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Region key (e.g. na, eu, ap, la, oce, kr, mn, gc, br, cn, jp, col)",
                        "name": "region",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "Timespan (e.g. all, 30 for 30 days)",
                        "name": "timespan",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    }
}